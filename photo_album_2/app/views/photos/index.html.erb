<ul>
  <table class = "table table-striped table-condensed">
    <tr>
      <th>Picture</th>
      <th>Title</th>
      <th colspan = "3"></th>
    </tr>
    <% @photos.each do |photo| %>
      <tr>
        <td><%= image_tag photo.file_location.url, size: "100x100",class: "img-thumbnail" %></td>
        <td><%= photo.title %></td>
        <td><%= link_to 'Show', photo_path(photo) %></td>
        <td><%= link_to 'Edit', edit_photo_path(photo) %></td>
        <td><%= link_to 'Destroy', photo_path(photo), method: :delete, data:{ confirm: "Are you sure?" } %></td>
      </tr>
    <% end %>
  </table>
  <button>
    <%= link_to 'New Photo', new_photo_path %>
  </button>
</ul>